
#include <Wire.h>
#include <SoftwareSerial.h>
#include <MeOrion.h>

MeBluetooth bluetooth(PORT_5);
double angle_rad = PI/180.0;
double angle_deg = 180.0/PI;
MeDCMotor motor_9(9);
MeDCMotor motor_10(10);

char Test = 4;
char Data = '0';
char Up ='1';
char Down ='2';
char Left = '3';
char Right = '4';
char Stop ='5';
void setup(){
    Serial.begin(9600);
    bluetooth.begin(9600);
    Serial.println("Bluetooth Start");
}

void loop()
{
      
    bluetooth.write(Test);
    //Data = bluetooth.read();
    if(((Up)==(Data))){
        motor_9.run(-255);
        motor_10.run(-255);
    }else{
        if(((Down)==(Data))){
            motor_9.run(255);
            motor_10.run(255);
        }else{
            if(((Left)==(Data))){
                motor_9.run(-255);
                motor_10.run(255);
            }else{
                if(((Right)==(Data))){
                    motor_9.run(255);
                    motor_10.run(-255);
                }else{
                    if(((Stop)==(Data))){
                        motor_9.run(0);
                        motor_10.run(0);
                    }
                }
            }
        }
    }
    
    _loop();
}

void _delay(float seconds){
    long endTime = millis() + seconds * 1000;
    while(millis() < endTime)_loop();
}

void _loop(){
    
}

